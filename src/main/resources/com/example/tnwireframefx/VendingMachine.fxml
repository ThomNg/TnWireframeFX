<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tnwireframefx.VendingMachineController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Button fx:id="colaBtn" mnemonicParsing="false" onAction="#onColaBtn" prefHeight="29.0" prefWidth="176.0" text="Cola - 2.50 €">
      <font>
         <Font size="14.0" />
      </font>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </Button>
   <Button mnemonicParsing="false" onAction="#onSpriteBtn" prefHeight="29.0" prefWidth="177.0" text="Sprite - 2.50 €">
      <font>
         <Font size="14.0" />
      </font>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </Button>
   <Button mnemonicParsing="false" onAction="#onIceTeaBtn" prefHeight="29.0" prefWidth="179.0" text="Ice tea - 2.50 €">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </Button>
   <Button mnemonicParsing="false" onAction="#onWineBtn" prefHeight="28.0" prefWidth="184.0" text="Wine - 9,9 €">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
      <font>
         <Font size="14.0" />
      </font>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </Button>
   
   <HBox alignment="TOP_CENTER" spacing="20.0">
      <children>
         <TextField fx:id="payment" prefHeight="29.0" prefWidth="152.0" promptText="insert your money">
            <font>
               <Font size="14.0" />
            </font>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </TextField>
          <Button onAction="#onPayBtn" prefHeight="29.0" prefWidth="111.0" text="Pay">
            <font>
               <Font size="14.0" />
            </font>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </Button>
      </children>
   </HBox>
   <Label fx:id="output" alignment="CENTER" prefHeight="93.0" prefWidth="360.0" style="-fx-text-fill: white;" text="Welcome!">
      <font>
         <Font size="14.0" />
      </font>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </Label>
   <Button mnemonicParsing="false" onAction="#onResetBtn" style="-fx-background-color: green;" text="Reset">
      <font>
         <Font size="14.0" />
      </font>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </Button>
</VBox>
